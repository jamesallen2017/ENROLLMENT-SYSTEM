@model Enrollment_System.Models.Enrollment_Registration
@{
    ViewBag.Title = "Home Page";
}

<div class="influence-finder">
    <div class="container-fluid dashboard-content">
        <!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">Enrollment for Approval </h3>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Enrollment for Approval</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- ============================================================== -->
            <!-- search bar  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <input class="form-control form-control-lg" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-primary search-btn" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end search bar  -->
            <!-- ============================================================== -->
            <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12 col-12">
                <!-- ============================================================== -->
                <!-- card influencer one -->
                <!-- ============================================================== -->
                @foreach (var row in Model.PopulatealLRecords)
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-xl-9 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="user-avatar float-xl-left pr-4 float-none">
                                        @if (row.Gender == "Female")
                                        {
                                            <img src="~/assets/images/female.png" alt="User Avatar" class="rounded-circle user-avatar-xl">
                                        }
                                        else if (row.Gender == "Male")
                                        {
                                            <img src="~/assets/images/male.png" alt="User Avatar" class="rounded-circle user-avatar-xl">
                                        }
                                    </div>
                                    <div class="pl-xl-3">
                                        <div class="m-b-0">
                                            <div class="user-avatar-name d-inline-block">
                                                <h2 class="font-24 m-b-10">@Html.DisplayFor(models => row.FirstName) @Html.DisplayFor(models => row.MiddleName) @Html.DisplayFor(models => row.LastName)</h2>
                                            </div>
                                            <div class="rating-star d-inline-block pl-xl-2 mb-2 mb-xl-0">
                                                @if (row.Grade == "Grade 1")
                                                {
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <p class="d-inline-block text-dark">@Html.DisplayFor(models => row.Grade)</p>
                                                }
                                                else if (row.Grade == "Grade 2")
                                                {
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <p class="d-inline-block text-dark">@Html.DisplayFor(models => row.Grade)</p>
                                                }
                                                else if (row.Grade == "Grade 3")
                                                {
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <p class="d-inline-block text-dark">@Html.DisplayFor(models => row.Grade)</p>
                                                }
                                                else if (row.Grade == "Grade 4")
                                                {
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <p class="d-inline-block text-dark">@Html.DisplayFor(models => row.Grade)</p>
                                                }
                                                else if (row.Grade == "Grade 5")
                                                {
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <i class="fa fa-fw fa-star"></i>
                                                    <p class="d-inline-block text-dark">@Html.DisplayFor(models => row.Grade)</p>
                                                }
                                            </div>
                                        </div>
                                        <div class="user-avatar-address">
                                            <p class="mb-2">
                                                <i class="fa fa-map-marker-alt mr-2  text-primary"></i>@Html.DisplayFor(models => row.Location) <span class="m-l-10">@Html.DisplayFor(models => row.Gender)<span class="m-l-20">@Html.DisplayFor(models => row.Age) Year Old</span></span>
                                            </p>
                                            
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="float-xl-right float-none mt-xl-0 mt-4">
                                        <!--<a href="#" class="btn-wishlist m-r-10"><i class="far fa-star"></i></a>-->
                                        <a href="#" class="btn btn-danger">Reject</a>
                                        <a href="#" class="btn btn-secondary">Approve</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="border-top user-social-box">
                            <div class="user-social-media d-xl-inline-block "><span class="mr-2 twitter-color"> <img src="~/assets/images/email.png" height="20" /></span><span>@Html.DisplayFor(models => row.EmailAddress)</span></div>
                            <div class="user-social-media d-xl-inline-block"><span class="mr-2  pinterest-color"> <img src="~/assets/images/phone.png" height="20" /></span><span>@Html.DisplayFor(models => row.MobileNumber)</span></div>
                            <div class="user-social-media d-xl-inline-block"><span class="mr-2 instagram-color"> <img src="~/assets/images/year.png" height="20"/></span><span>@Html.DisplayFor(models => row.EntryYear)</span></div>

                        </div>
                    </div>
                }

                <!-- ============================================================== -->
                <!-- end card influencer one -->
                <!-- ============================================================== -->
                <!-- end content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- influencer sidebar  -->
            <!-- ============================================================== -->
            <div class="col-xl-3 col-lg-4 col-md-4 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="font-16">Sorting By</h3>
                        <select class="form-control">
                            <option>All Levels</option>
                            <option>Grade 1</option>
                            <option>Grade 2</option>
                            <option>Grade 3</option>
                            <option>Grade 4</option>
                            <option>Grade 5</option>
                        </select>
                    </div>
                    <div class="card-body border-top">
                        <h3 class="font-16">Age Demographics</h3>
                        <select class="form-control">
                            <option selected>Select the Age</option>
                            <option value="20-30">20-30</option>
                            <option value="30-40">30-40</option>
                            <option value="40-50">40-50</option>
                        </select>
                    </div>
                    <div class="card-body border-top">
                        <a href="#" class="btn btn-secondary btn-lg btn-block">Submit</a>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end influencer sidebar  -->
            <!-- ============================================================== -->
        </div>
    </div>
</div>
